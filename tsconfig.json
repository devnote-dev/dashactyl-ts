{
    "compilerOptions":{
        "lib":["ES2020"],
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "dist",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["./node_modules", "./tests"]
}